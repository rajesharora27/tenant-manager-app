# Environment variables for SSE Tenant Manager Web App
# Copy this file to .env and update with your actual values

# Base URL for the API
BASE_URL=https://api.sse.cisco.com/

# Authentication credentials
USERNAME=your_sse_username_here
PASSWORD=your_sse_password_here
TOKEN_URL=https://api.sse.cisco.com/auth/v2/token

# Flask app configuration
SECRET_KEY=generate-a-32-character-random-string-for-production-security
FLASK_ENV=production
FLASK_DEBUG=False

# SSL Configuration (for corporate environments)
VERIFY_SSL=true

# Default values for Create Tenant form (optional - customize as needed)
TENANT_NAME=Your Organization Name
ADMIN_FIRSTNAME=First
ADMIN_LASTNAME=Last
ADMIN_EMAIL=admin@yourcompany.com
ADDRESS_LINE1=123 Main Street
ADDRESS_LINE2=Suite 100
CITY=Your City
STATE=Your State
ZIPCODE=12345
COUNTRY_CODE=US
SEATS=100
COMMENTS=Default tenant description
EXTRA_ADMIN_EMAILS=admin2@yourcompany.com,admin3@yourcompany.com

# Application Configuration
PORT=5000
